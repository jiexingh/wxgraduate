/* pages/book/book.wxss */

.container {
  width: 100%;
  font-size: 33rpx;
  display: flex;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

/* 底端按钮 */

.btn_box {
  display: flex;
  width: 100%;
  flex-direction: row;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.btn_box button {
  width: 45%;
  background: #36b9af;
  border-color: #36b9af;
  color: white;
}

.num {
  margin: 0 20rpx;
}

.textareabox {
  margin: 20rpx;
  height: 250rpx;
}

.textareabox>textarea {
  width: 100%;
  height: 100%;
  background-color: rgb(235, 229, 229);
}
